<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression">
    <test name="Chrome Tests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="loginTests.FailedLoginTest"/>
            <class name="loginTests.LoginTest"/>
            <class name="testsWithLoggedInUser.LogoutTest"/>
            <class name="testsWithLoggedInUser.AddToCartTest"/>
            <class name="testsWithLoggedInUser.RemoveFromCartTest"/>
            <class name="testsWithLoggedInUser.AddRandomItemToCart"/>
            <class name="testsWithLoggedInUser.AddMinMaxCostToCart"/>
            <class name="checkoutTests.SuccessfulCheckout"/>
        </classes>
    </test>

    <test name="Firefox tests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="loginTests.FailedLoginTest"/>
            <class name="loginTests.LoginTest"/>
            <class name="testsWithLoggedInUser.LogoutTest"/>
            <class name="testsWithLoggedInUser.AddToCartTest"/>
            <class name="testsWithLoggedInUser.RemoveFromCartTest"/>
            <class name="testsWithLoggedInUser.AddRandomItemToCart"/>
            <class name="testsWithLoggedInUser.AddMinMaxCostToCart"/>
            <class name="checkoutTests.SuccessfulCheckout"/>
        </classes>
    </test>

    <test name="Edge Tests">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="loginTests.FailedLoginTest"/>
            <class name="loginTests.LoginTest"/>
            <class name="testsWithLoggedInUser.LogoutTest"/>
            <class name="testsWithLoggedInUser.AddToCartTest"/>
            <class name="testsWithLoggedInUser.RemoveFromCartTest"/>
            <class name="testsWithLoggedInUser.AddRandomItemToCart"/>
            <class name="testsWithLoggedInUser.AddMinMaxCostToCart"/>
            <class name="checkoutTests.SuccessfulCheckout"/>
        </classes>
    </test>
</suite>